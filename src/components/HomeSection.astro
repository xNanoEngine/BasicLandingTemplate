---
import { Image } from "astro:assets";
import fotoPerfil from "../assets/perfil.jpg";
---

<section
  id="inicio"
  class="w-full min-h-screen flex flex-col justify-center items-center bg-slate-100 p-4"
>
  <div
    class="w-full max-w-4xl bg-white rounded-2xl shadow-xl overflow-hidden grid grid-cols-1 md:grid-cols-2"
  >
    <div
      class="flex flex-col items-center justify-center p-8 md:p-12 bg-slate-50 md:border-r border-slate-100"
    >
      <div class="relative w-48 h-48 mb-6 group">
        <div
          class="absolute inset-0 rounded-full border-4 border-white shadow-lg overflow-hidden"
        >
          <Image
            src={fotoPerfil}
            alt="Foto de Matias Martinez"
            class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-500"
            width={400}
            height={400}
            loading="eager"
          />
        </div>
      </div>

      <h2 class="text-3xl font-bold text-slate-800 mb-2">Matias Martinez</h2>
      <span
        class="inline-block px-3 py-1 text-sm font-medium text-blue-600 bg-blue-50 rounded-full mb-4"
      >
        Ing. Civil Informático
      </span>

      <div class="flex gap-4 mt-2">
        <div
          class="w-8 h-8 bg-slate-200 rounded-full hover:bg-blue-600 transition-colors cursor-pointer"
        >
        </div>
        <div
          class="w-8 h-8 bg-slate-200 rounded-full hover:bg-blue-600 transition-colors cursor-pointer"
        >
        </div>
      </div>
    </div>

    <div class="hidden md:flex flex-col justify-center p-8 md:p-12">
      <nav>
        <ul class="space-y-4">
          <li>
            <a
              href="#sobre-mi"
              class="group flex items-center justify-between p-4 rounded-xl hover:bg-slate-50 transition-all duration-300 border border-transparent hover:border-slate-100"
            >
              <div>
                <span
                  class="block text-xl font-bold text-slate-800 group-hover:text-blue-600 transition-colors"
                  >Sobre mí</span
                >
                <span class="text-sm text-slate-400 group-hover:text-slate-500"
                  >Quién soy y qué hago</span
                >
              </div>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                class="w-5 h-5 text-slate-300 group-hover:text-blue-500 transform group-hover:translate-x-1 transition-all"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M8.25 4.5l7.5 7.5-7.5 7.5"></path>
              </svg>
            </a>
          </li>

          <li>
            <a
              href="#experiencia"
              class="group flex items-center justify-between p-4 rounded-xl hover:bg-slate-50 transition-all duration-300 border border-transparent hover:border-slate-100"
            >
              <div>
                <span
                  class="block text-xl font-bold text-slate-800 group-hover:text-blue-600 transition-colors"
                  >Experiencia</span
                >
                <span class="text-sm text-slate-400 group-hover:text-slate-500"
                  >Mis trabajos anteriores</span
                >
              </div>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                class="w-5 h-5 text-slate-300 group-hover:text-blue-500 transform group-hover:translate-x-1 transition-all"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M8.25 4.5l7.5 7.5-7.5 7.5"></path>
              </svg>
            </a>
          </li>

          <li>
            <a
              href="#proyectos"
              class="group flex items-center justify-between p-4 rounded-xl hover:bg-slate-50 transition-all duration-300 border border-transparent hover:border-slate-100"
            >
              <div>
                <span
                  class="block text-xl font-bold text-slate-800 group-hover:text-blue-600 transition-colors"
                  >Projectos</span
                >
                <span class="text-sm text-slate-400 group-hover:text-slate-500"
                  >Projectos en los que he participado</span
                >
              </div>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                class="w-5 h-5 text-slate-300 group-hover:text-blue-500 transform group-hover:translate-x-1 transition-all"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M8.25 4.5l7.5 7.5-7.5 7.5"></path>
              </svg>
            </a>
          </li>

          <li>
            <a
              href="#"
              class="group flex items-center justify-between p-4 rounded-xl hover:bg-slate-50 transition-all duration-300 border border-transparent hover:border-slate-100"
            >
              <div>
                <span
                  class="block text-xl font-bold text-slate-800 group-hover:text-blue-600 transition-colors"
                  >Contacto</span
                >
                <span class="text-sm text-slate-400 group-hover:text-slate-500"
                  >Hablemos</span
                >
              </div>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                class="w-5 h-5 text-slate-300 group-hover:text-blue-500 transform group-hover:translate-x-1 transition-all"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M8.25 4.5l7.5 7.5-7.5 7.5"></path>
              </svg>
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</section>
