const SHOW_LIMIT = 3;
---

<section
  id="experiencia"
  class="w-full px-4 py-16 bg-white flex flex-col justify-center items-center"
>
  <div class="text-center mb-12 max-w-3xl mx-auto">
    <h2 class="text-4xl font-bold text-slate-800 mb-2">Mi Trayectoria</h2>
    <p class="text-slate-500 text-lg">El camino recorrido hasta hoy.</p>
  </div>

  <div class="max-w-4xl mx-auto w-full">
    <div
      class="relative border-l-2 border-slate-200 ml-3 md:ml-6 space-y-12 pb-4"
    >
      {
        experiences.map((exp, index) => {
          const isHidden = index >= SHOW_LIMIT;

          return (
            <div
              class={`relative pl-8 md:pl-12 experience-item group transition-all duration-500 ease-in-out ${isHidden ? "hidden opacity-0 translate-y-4" : "opacity-100 translate-y-0"}`}
            >
              {/* CAMBIOS REALIZADOS AQU√ç:
                 1. 'top-1/2 -translate-y-1/2': Centra verticalmente.
                 2. 'group-hover:...': El icono reacciona al hover del padre (la tarjeta).
              */}
              <div class="absolute top-1/2 -translate-y-1/2 -left-[21px] md:-left-[25px] w-11 h-11 md:w-13 md:h-13 rounded-full bg-white border-4 border-blue-100 shadow-sm flex items-center justify-center z-10 group-hover:scale-110 group-hover:border-blue-500 transition-all duration-300">
                <span class="text-xl md:text-2xl filter grayscale group-hover:grayscale-0 transition-all duration-300">
                  {exp.icon}
                </span>
              </div>

              <article class="bg-white p-6 md:p-8 rounded-2xl border border-slate-100 shadow-sm group-hover:shadow-xl group-hover:border-blue-100 transition-all duration-300">
                <header class="flex flex-col sm:flex-row sm:items-center justify-between mb-4 gap-2">
                  <div>
                    <h3 class="text-xl md:text-2xl font-bold text-slate-800 leading-tight group-hover:text-blue-600 transition-colors">
                      {exp.title}
                    </h3>
                    <div class="text-slate-500 font-medium flex items-center gap-2 mt-1">
                      <span>üè¢</span> {exp.company}
                    </div>
                  </div>
                  <span class="self-start sm:self-center py-1 px-4 rounded-full bg-blue-50 text-blue-600 text-xs md:text-sm font-bold tracking-wide uppercase whitespace-nowrap group-hover:bg-blue-100 transition-colors">
                    {exp.date}
                  </span>
                </header>
                <p class="text-slate-600 leading-relaxed text-base">
                  {exp.description}
                </p>
              </article>
            </div>
          );
        })
      }
    </div>

    {
      experiences.length > SHOW_LIMIT && (
        <div class="mt-8 text-center">
          <button
            id="show-more-btn"
            class="group px-8 py-3 bg-white border border-slate-200 rounded-full text-slate-600 font-semibold shadow-sm hover:bg-slate-50 hover:border-blue-400 hover:text-blue-600 transition-all flex items-center gap-2 mx-auto"
          >
            <span>Ver toda la trayectoria</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              class="w-4 h-4 group-hover:translate-y-1 transition-transform"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M19.5 8.25l-7.5 7.5-7.5-7.5"
              />
            </svg>
          </button>
        </div>
      )
    }
  </div>
</section>

<script>
  const btn = document.getElementById("show-more-btn");

  btn?.addEventListener("click", () => {
    const hiddenItems = document.querySelectorAll(".experience-item.hidden");

    hiddenItems.forEach((item, i) => {
      item.classList.remove("hidden");
      setTimeout(() => {
        item.classList.remove("opacity-0", "translate-y-4");
        item.classList.add("opacity-100", "translate-y-0");
      }, i * 100);
    });

    btn.style.display = "none";
  });
</script>
